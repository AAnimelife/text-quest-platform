{
  "name": "text-quest-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "prepare": "rm -rf frontend && cp -r ../frontend/build frontend",
    "start": "electron .",
    "dist": "npm run prepare && electron-builder"
  },
  "build": {
    "appId": "io.aanimelife",
    "productName": "TextQuest",
  
    "files": [
      "main.js",
      "frontend/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets"
    }
  },

  "keywords": [],
  "author": "Serafim",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12"
  }
}
